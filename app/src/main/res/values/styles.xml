<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- button -->
    <style name="BackImageButtonTheme">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="MenuImageButtonTheme">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:src">@drawable/ic_open</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ButtonTheme" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#A0A0A0</item>
    </style>


    <!-- grid -->
    <style name="GridTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GridBaseTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPrimaryTextTheme" parent="@style/GridBaseTextTheme">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GridSecondaryTextTheme" parent="@style/GridBaseTextTheme">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GridBaseImageTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GridCircleImageTheme" parent="@style/GridBaseImageTheme">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="GridSquareImageTheme" parent="@style/GridBaseImageTheme"></style>

    <!-- linear -->
    <style name="LinearBaseTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinearTheme" parent="@style/LinearBaseTheme">
        <item name="android:background">@drawable/style_linear</item>
    </style>

    <style name="LinearFillTheme" parent="@style/LinearBaseTheme">
        <item name="android:background">@drawable/style_linear_fill</item>
    </style>

    <style name="LinearBaseImageTheme">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="LinearCircleImageTheme" parent="@style/LinearBaseImageTheme">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="LinearSquareImageTheme" parent="@style/LinearBaseImageTheme"></style>

    <style name="LinearTextContainerTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearTextForEditContainerTheme" parent="@style/LinearTextContainerTheme">
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="LinearBaseTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LinearPrimaryTextTheme" parent="@style/LinearBaseTextTheme">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LinearSecondaryTextTheme" parent="@style/LinearBaseTextTheme">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- main menu -->
    <style name="MainMenuTheme">
        <item name="android:background">@drawable/style_linear_fill</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>